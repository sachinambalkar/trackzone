<LinearLayout
    android:id="@+id/new_alert_notificationLL"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#cccc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs442.com.fragment.AlertNotificationFragment">
    <Button
        android:id="@+id/button_stop_alerts"
        android:background="@color/highlighted_text_material_dark"
        android:text="Stop all alerts"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="39dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="12"
        android:id="@+id/notification_listlayout"
        android:layout_width="match_parent"
        android:layout_height="0px">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_alertnotifiction" />

    </LinearLayout>


</LinearLayout>
