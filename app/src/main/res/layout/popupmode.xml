<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup_mode"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:textStyle="bold"
        android:textSize="50px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select time interval :"
        android:textColor="@color/material_deep_teal_500"
        android:id="@+id/tv_marker_title"
        android:layout_weight="0.05" />

    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/SpinnerModeRange"
        android:layout_height="60dp"
        android:prompt="@string/ModeRangeDefault"
        android:layout_width="fill_parent"
        android:entries="@array/mode_range"
        android:padding="2dp"
        android:spinnerMode="dialog">
    </Spinner>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:textColor="@color/material_deep_teal_500"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:layout_gravity="right"
            android:id="@+id/popupbutton_mode_ok" />
        <Button
            android:layout_weight="1"
            android:textColor="@color/material_deep_teal_500"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="right"
            android:id="@+id/popupbutton_mode_cancel" />

    </LinearLayout>


</LinearLayout>
