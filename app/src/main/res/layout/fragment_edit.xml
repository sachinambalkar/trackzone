<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cs442.com.fragment.EditFragment">
<LinearLayout
    android:layout_weight="0.1"
    android:layout_gravity="top"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="invisible"
        android:layout_weight="1"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/b_editAction"
        android:background="@drawable/button_onclickedit"
        android:layout_marginLeft="100dp"
        android:layout_gravity="right"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/b_deleteAction"
        android:background="@drawable/button_onclickdelete"
        android:layout_gravity="right"
        />

    </LinearLayout>

        <fragment
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapEdit" />

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
       >
        <TextView
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textSize="14dp"
            android:layout_weight="1"
            android:textStyle="italic"
            android:id="@+id/tv_alertTitle"/>
        <TextView
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_weight="0.5"
            android:id="@+id/tv_alertRadius"/>


    </LinearLayout>

    <LinearLayout

        android:layout_weight="0.5"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textAlignment="center"
            android:id="@+id/tv_alertDescription"/>

        <TextView
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textSize="14dp"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:id="@+id/tv_alertStatus"/>
    </LinearLayout>
</LinearLayout>
